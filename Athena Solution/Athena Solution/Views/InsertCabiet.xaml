<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Athena_Solution.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    x:Class="Athena_Solution.Views.InsertCabiet"
        mc:Ignorable="d"
        Title="Adaugare profesori" Height="230" Width="480"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="47" Margin="10,10,0,0" VerticalAlignment="Top" Width="54" Source="/Images/logoSplash.png"/>
        <Button x:Name="addGroup" Content="Adauga" HorizontalAlignment="Left" Margin="180,149,0,33" Width="127" FontSize="14" Click="addCabinet_Click"/>
        <TextBox x:Name="txtNrCabinet" HorizontalAlignment="Left" Margin="174,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontSize="18" RenderTransformOrigin="0.513,0.566"/>
        <Label x:Name="labelNameGroup" Content="Numar Cabinet" HorizontalAlignment="Left" Margin="173,34,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="141"/>

    </Grid>
</Window>
