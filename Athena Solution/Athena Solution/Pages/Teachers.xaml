<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Athena_Solution.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Athena_Solution.Pages.Teachers"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="White">
    <Grid>
        <ListBox Margin="0,0,0,139">
            <Border BorderBrush="White" BorderThickness="1" Height="428" Width="782"/>
        </ListBox>
        <DataGrid x:Name="DataTeachers" Margin="0,0,0,193"/>
        <Button x:Name="del_teachers" Content="Stergeti profesor" Margin="656,549,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="del_teachers_Click"/>
        <Button x:Name="update_Teacher" Content="Actualizati profesorii" Margin="473,608,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="update_Teacher_Click"/>
        <Label x:Name="labelTitle" Content="Introduceti datele pentru stergere" HorizontalAlignment="Left" Margin="64,516,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox Text="" x:Name="txtDelProf" FontSize="18" materialDesign:HintAssist.Hint="Introduceti ID" BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}"  Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="64,553,659,41" />
        <Button x:Name="add_teachers" Content="Adaugati profesor" Margin="652,608,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="add_teachers_Click"/>
    </Grid>
</UserControl>
